<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-offset-3">
      <h1>New review</h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
      <br>
      <div>
        <%= link_to "Back to restaurants", restaurants_path %>
    </div>
  </div>
</div>
